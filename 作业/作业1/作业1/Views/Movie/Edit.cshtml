@model Movies.User_info
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Movie/Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <table>
        
        <tr>
            <td>Name</td>
            <td><input type="text" name="Name" id="Name" value="@Model.Name" /></td>
        </tr>
        <tr>
            <td>Age</td>
            <td><input type="text" name="Age" id="Age" value="@Model.Age" /></td>
        </tr>
        <tr>
            <td>Company</td>
            <td><input type="text" name="Company" id="Company" value="@Model.Company" /></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="添加" />
            </td>
        </tr>
    </table>
</form>
